  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./server",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["server/**/*.ts"]
}
