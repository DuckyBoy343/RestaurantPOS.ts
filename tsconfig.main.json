{
  "compilerOptions": {
    "target": "ES2020", // Use a modern JS version to fix 'AggregateError'
    "lib": ["ES2020"],     // Include the corresponding library
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true, // This fixes the 'import path from 'path'' error
    "skipLibCheck": true,  // Good practice, prevents errors from node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "main/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client",
    "server"
  ]
}